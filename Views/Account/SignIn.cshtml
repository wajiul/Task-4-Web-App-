@model UserLoginModel

<div class="container">
    <h1 class="text-center mb-4">Sign Up</h1>

    <form method="post" asp-action="SignIn" asp-controller="Account">

        <div class="col-md-5 col-12 ms-auto me-auto">

            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary py-3 w-100">Submit</button>
        </div>
    </form>

</div>
